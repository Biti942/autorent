rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ” Admins : lecture uniquement par eux-mÃªmes, pas dâ€™Ã©criture directe
    match /admins/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false;
    }

    // ğŸ“„ Abonnements : accÃ¨s par utilisateur concernÃ© ou admin
    match /abonnements/{userId} {
      allow read: if request.auth != null && (
                    request.auth.uid == userId ||
                    exists(/databases/$(database)/documents/admins/$(request.auth.uid))
                  );
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸš— Voitures publiques (base cars) : lecture publique si disponible, Ã©criture par propriÃ©taire ou admin
    match /cars/{carId} {
      allow read: if resource.data.disponible == true ||
                   request.auth != null && (
                     request.auth.uid == resource.data.uid ||  // propriÃ©taire
                     exists(/databases/$(database)/documents/admins/$(request.auth.uid)) // admin
                   );
      allow write, update: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // ğŸš™ Flotte dâ€™agence (fleet) : lecture et Ã©criture rÃ©servÃ©es Ã  lâ€™agence propriÃ©taire
    match /fleet/{carId} {
      allow read, write, update: if request.auth != null &&
                                 request.auth.uid == resource.data.agencyId;
    }

    // ğŸ“† RÃ©servations : lecture par utilisateur, agence ou admin ; Ã©criture par utilisateur ; update par agence/admin
    match /reservations/{resId} {
      allow read: if request.auth != null && (
                    request.auth.uid == resource.data.userId ||
                    request.auth.uid == resource.data.agencyId ||
                    exists(/databases/$(database)/documents/admins/$(request.auth.uid))
                  );
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow update: if request.auth != null && (
                      request.auth.uid == resource.data.agencyId ||
                      exists(/databases/$(database)/documents/admins/$(request.auth.uid))
                    );
    }

    // ğŸ‘¤ Utilisateurs FR : accÃ¨s total au propriÃ©taire
    match /utilisateurs/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ‘¤ Utilisateurs EN : accÃ¨s total au propriÃ©taire
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ“Š (Optionnel) Stats internes (Ã  crÃ©er plus tard) - accÃ¨s limitÃ© Ã  lâ€™agence
    // match /stats/{agencyId} {
    //   allow read, write: if request.auth != null && request.auth.uid == agencyId;
    // }

  }
}

